@using System.Web.Optimization
@using WebApplication1.Extension
@model WebApplication1.Models.AppointmentRegistration
@{
    Layout = "~/Views/Shared/_LUser.cshtml";
}

<!-- Hero Start -->
<div class="container-fluid bg-primary py-5 hero-header mb-5">
    <div class="row py-3">
        <div class="col-12 text-center">
            <h1 class="display-3 text-white animated zoomIn">Запись</h1>
            <a href="" class="h4 text-white">На главную</a>
            <i class="far fa-circle text-white px-2"></i>
            <a href="" class="h4 text-white">Приём</a>
        </div>
    </div>
</div>
<!-- Hero End -->
<!-- Appointment Start -->
<div class="container-fluid bg-primary bg-appointment mb-5 wow fadeInUp" data-wow-delay="0.1s" style="margin-top: 90px;">
    <div class="container">
        <div class="row gx-5">
            <div class="col-lg-6 py-5">
                <div class="py-5">
                    <h1 class="display-5 text-white mb-4">Мы сертифицированная и отмеченная наградами стоматологическая клиника, которой можно доверять</h1>
                    <p class="text-white mb-0"></p>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="appointment-form h-100 d-flex flex-column justify-content-center text-center p-5 wow zoomIn" data-wow-delay="0.6s">
                    <h1 class="text-white mb-4">Сделать запись</h1>
                    
                        @using (Html.BeginForm("appointment", "User", FormMethod.Post, new { @id = "AppointmentForm" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="row g-3">
                                <div class="col-12 col-sm-6">
                                    <div class="date" id="date1" data-target-input="nearest">
                                        @Html.TextBoxFor(model => model.Date, new { @class = "form-control bg-light border-0 datetimepicker-input", @placeholder = "Дата", @style = "height: 55px;", @type = "date" })
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="time" id="time1" data-target-input="nearest">
                                        @Html.TextBoxFor(model => model.Time, new { @class = "form-control bg-light border-0 datetimepicker-input", @placeholder = "Время записи", @style = "height: 55px;", @type = "time", @step = "1800" })
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="date" id="date1" data-target-input="nearest">
                                        @Html.DropDownListFor(model => model.Expert, Enum.GetValues(typeof(WebApplication1.Domain.Enums.Experts)).Cast<WebApplication1.Domain.Enums.Experts>().Select(e => new SelectListItem { Text = e.GetEnumDescription(), Value = e.ToString()}), "Выберите эксперта", new { @class = "form-control bg-light border-0 datetimepicker-input", @placeholder = "Эксперт", @style = "height: 55px;" })
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="date" id="date1" data-target-input="nearest">
                                        @Html.DropDownListFor(model => model.Service, Enum.GetValues(typeof(WebApplication1.Domain.Enums.Experts)).Cast<WebApplication1.Domain.Enums.Services>().Select(e => new SelectListItem { Text = e.GetEnumDescription(), Value = e.ToString()}), "Выберите услугу", new { @class = "form-control bg-light border-0 datetimepicker-input", @placeholder = "Услуги", @style = "height: 55px;" })
                                    </div>
                                </div>

                                
                                <div class="col-12 col-sm-6" style="width:200%">
                                    <div class="date" id="date1" data-target-input="nearest">
                                        @Html.TextBoxFor(model => model.Notes, new { @class = "form-control bg-light border-0 datetimepicker-input", @placeholder = "Примечания", @style = "height: 110px;" })
                                        @Html.ValidationMessageFor(x => x.Notes, "", new { @class = "text-danger" })

                                    </div>
                                </div>
                                <div class="col-12">
                                </div>
                            </div>
                            <button type="submit" class="btn btn-dark w-100 py-3">Подтвердить запись</button>
                        }
                    
                </div>
            </div>
        </div>
    </div>
</div>
